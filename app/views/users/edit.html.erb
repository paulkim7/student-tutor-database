        <%= form_for current_user, :action => :update do |f| %>
         <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>


  <p>Click on a class to add it to your class list. To choose multiple classes, hold down the control button while selecting the classes.</P>
         <%= select_tag "lectures_chosen", options_from_collection_for_select(Lecture.all, 'id', 'name', current_user.lectures.map{ |j| j.id }), :multiple => true %>
       <p class="button"> <%= f.submit %></p>
        <% end %>

