<h1>Edit Post</h1>

<%= form_for @post, url: {action: "update"} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :class %><br>
    <%= f.collection_select :lecture, Lecture.order(:name),:id,:name, include_blank: false %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :compensation %><br>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', @post, class:"btn btn-sm btn-default" %>


